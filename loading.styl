.loadingComponent
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	z-index 99999999
	background-color rgba(#fff, .85)
	transition ease all 1s
	opacity 1
	display: flex
	justify-content center
	align-items center
	&.hidden
		opacity 0
		z-index -1

	.sk-circle
		flex 0 0 auto
		margin 0 auto
		width 40px
		height 40px
		position relative
		.sk-child 
			width 100%
			height 100%
			position absolute
			left 0
			top 0

			&:before
				content ''
				display block
				margin 0 auto
				width 15%
				height 15%
				background-color #333
				border-radius 100%
				animation animationname 1.2s infinite ease-in-out both

		for no in (2...13)
			.sk-circle{no}
				transform rotate(30*no - 30 deg)
			.sk-circle{no}:before
				animation-delay (-1.3 + 0.1*no) s


@keyframes animationname {
	0%, 80%, 100% {
		transform scale(0)
  }
	40% {
	transform scale(1)
	}
}
